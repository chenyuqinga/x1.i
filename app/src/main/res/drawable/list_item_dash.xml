<?xml version="1.0" encoding="utf-8"?>
<!--所有按钮统一style-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">
    <!-- 显示虚线，破折线的宽度为dashWith，空隙的宽度为dashGap, darkgray -->
    <stroke
        android:width="1dp"
        android:color="#FF666666"
        android:dashGap="5px"
        android:dashWidth="5px"/>
    <!-- 虚线的高度 -->
    <size android:height="5px"/>
</shape>