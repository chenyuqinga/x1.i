<resources>

    <!-- Base application theme. -->
    <style name="AppCustomTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/bg_activity</item>
    </style>

    <!--全屏dialog样式-->
    <style name="FullScreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>移除边框
        <item name="android:windowNoTitle">true</item>去除顶部标题栏
        <item name="android:windowIsTranslucent">false</item>窗体透明
        <item name="android:windowBackground">@android:color/transparent</item>窗体背景透明
        <item name="android:windowIsFloating">false</item>窗体是否浮动
        <item name="android:backgroundDimEnabled">true</item>背景是否昏暗
        <item name="android:backgroundDimAmount">0.8</item>昏暗数量（透明度）
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#9A9A9A</item>
        <item name="android:gravity">center</item>
    </style>

    <!--普通dialog样式不透明-->
    <style name="CommonDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--普通dialog样式不透明-->
    <style name="VolumeDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Widget.AppCompat.Loading" parent="@style/Widget.AppCompat.ProgressBar" />

    <style name="MainTabBtn">
        <item name="android:textColor">@drawable/color_txt_select</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:checkMark">@null</item>
        <item name="android:paddingTop">16px</item>
        <item name="android:paddingBottom">16px</item>
        <item name="android:textSize">@dimen/px26</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">3px</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--黄色按钮属性-->
    <style name="BtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_txt_select</item>
        <item name="android:background">@drawable/shape_button_select</item>
        <item name="android:textSize">@dimen/px30</item>
    </style>

    <style name="UnBtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_txt_select</item>
        <item name="android:background">@drawable/shape_button_normal</item>
        <item name="android:textSize">@dimen/px30</item>
    </style>

    <style name="QuickItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/px26</item>
    </style>

    <style name="WiFiDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>移除边框
        <item name="android:windowNoTitle">true</item>去除顶部标题栏
        <item name="android:windowIsTranslucent">true</item>窗体透明
        <item name="android:windowBackground">@android:color/transparent</item>窗体背景透明
        <item name="android:windowIsFloating">false</item>窗体是否浮动
        <item name="android:backgroundDimEnabled">true</item>背景是否昏暗
        <item name="android:backgroundDimAmount">0.85</item>昏暗数量
    </style>
</resources>
