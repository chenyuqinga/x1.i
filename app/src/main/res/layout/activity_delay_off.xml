<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="34px"
        android:layout_marginTop="114px"
        android:drawableLeft="@mipmap/icon_delay_off"
        android:drawablePadding="5px"
        android:gravity="center_vertical"
        android:text="@string/str_delay_off"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginEnd="181px"
        android:layout_marginStart="181px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.fotile.x1i.widget.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_delay_off"
            android:textColor="@color/white_txt"
            android:textSize="30px" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/selector_setting_switch_thumb"
            android:track="@drawable/selector_setting_switch" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="181px"
        android:layout_marginStart="181px"
        android:background="@drawable/shape_item_divide_line" />

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="181px"
        android:layout_marginStart="181px"
        android:layout_marginTop="20px"
        android:text="@string/delayed_shutdown_tip"
        android:textColor="#FF9A9A9A"
        android:textSize="26px" />
    <!--延时设置-->
    <LinearLayout
        android:id="@+id/layout_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_delay_time"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginEnd="181px"
            android:layout_marginStart="181px"
            android:gravity="center_vertical">

            <com.fotile.x1i.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_delay_time"
                android:textColor="@color/white_txt"
                android:textSize="30px" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.fotile.x1i.widget.StyleTextView
                android:id="@+id/tv_delay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/select_txt"
                android:textSize="30px" />

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginStart="10px"
                android:background="@mipmap/icon_right"
                android:contentDescription="@null" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginEnd="181px"
            android:layout_marginStart="181px"
            android:background="@drawable/shape_item_divide_line" />
    </LinearLayout>


</LinearLayout>
