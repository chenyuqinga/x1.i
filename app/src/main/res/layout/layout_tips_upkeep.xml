<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px80"
        android:drawableTop="@mipmap/image_upkeep_tips"
        android:drawablePadding="@dimen/px30"
        android:gravity="center"
        android:text="保养提示"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/px36" />

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:text="风机运行2000多小时 清洗服务电话  952315"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/px30" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px100"
        android:orientation="horizontal">

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_later"
            style="@style/UnBtnStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px80"
            android:text="稍后提示" />

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_finish"
            style="@style/BtnStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px80"
            android:layout_marginStart="@dimen/px120"
            android:text="已完成保养" />

    </LinearLayout>
</LinearLayout>