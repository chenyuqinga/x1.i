<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="270px"
        android:layout_height="270px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:id="@+id/layout_menu_name_delete"
        android:layout_width="270px"
        android:layout_height="270px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:background="@drawable/grey_delete_background">
        <View
            android:id="@+id/view_delete"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <com.fotile.x1i.widget.StyleTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_recipe_delete" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt"
        android:layout_width="270px"
        android:layout_height="44px"
        android:layout_marginTop="290px"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="15px"
        android:textSize="30px" />

</RelativeLayout>
