<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="164px"
        android:background="@mipmap/bg_bottom"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="240px"
            android:layout_marginRight="240px"
            android:layout_marginTop="15px"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
            <!--语音-->
            <LinearLayout
                android:id="@+id/layout_bottom_voice"
                android:layout_width="160px"
                android:layout_height="150px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bottom_voice"
                    android:scaleType="centerInside" />

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="语音"
                    android:textColor="#ffffff"
                    android:textSize="26px" />
            </LinearLayout>

            <!--照明-->
            <LinearLayout
                android:id="@+id/layout_bottom_lamp"
                android:layout_width="160px"
                android:layout_height="150px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_lamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bottom_lighting"
                    android:scaleType="centerInside" />

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_lamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="照明"
                    android:textColor="#ffffff"
                    android:textSize="26px" />
            </LinearLayout>

            <!--自动挡-->
            <LinearLayout
                android:id="@+id/layout_bottom_auto"
                android:layout_width="160px"
                android:layout_height="150px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bottom_auto"
                    android:scaleType="centerInside" />

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="自动挡"
                    android:textColor="#ffffff"
                    android:textSize="26px" />
            </LinearLayout>

            <!--风量-->
            <LinearLayout
                android:id="@+id/layout_bottom_wind"
                android:layout_width="160px"
                android:layout_height="150px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bottom_wind"
                    android:scaleType="centerInside" />

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="风量"
                    android:textColor="#ffffff"
                    android:textSize="26px" />
            </LinearLayout>
            <!--烟机关闭-->
            <LinearLayout
                android:id="@+id/layout_bottom_close"
                android:layout_width="160px"
                android:layout_height="150px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bottom_close"
                    android:scaleType="centerInside" />

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="烟机关闭"
                    android:textColor="#ffffff"
                    android:textSize="26px" />
            </LinearLayout>
        </LinearLayout>

        <!--返回键-->
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_bottom_btn_back" />

        <!--home键-->
        <ImageView
            android:id="@+id/img_home"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_marginEnd="27dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_bottom_btn_home" />
    </RelativeLayout>
</LinearLayout>
