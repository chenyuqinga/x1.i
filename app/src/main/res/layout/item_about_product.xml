<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="920px"
        android:paddingBottom="@dimen/bottom_height"
        android:layout_height="match_parent"
        android:layout_marginBottom="20px"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--本机型号-->
            <RelativeLayout
                android:layout_width="920px"
                android:layout_height="80px">

                <com.fotile.x1i.widget.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="本机型号"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666666"/>

            <!--MAC地址-->
            <RelativeLayout
                android:layout_width="920px"
                android:layout_height="80px">

                <com.fotile.x1i.widget.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="MAC地址"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666666"/>
            <!--总容量-->
            <RelativeLayout
                android:layout_width="920px"
                android:layout_height="80px">

                <com.fotile.x1i.widget.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="总容量"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_capacity_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666666"/>
            <!--可用容量-->
            <RelativeLayout
                android:id="@+id/relate_available"
                android:layout_width="920px"
                android:layout_height="80px">

                <com.fotile.x1i.widget.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="可用容量"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_capacity_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666666"/>
            <!--序列号-->
            <RelativeLayout
                android:id="@+id/relate_sn"
                android:layout_width="920px"
                android:layout_height="80px">

                <com.fotile.x1i.widget.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="序列号"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#666666"/>
            <!--固件版本-->
            <RelativeLayout
                android:layout_width="920px"
                android:layout_height="80px">

                <com.fotile.x1i.widget.StyleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="固件版本"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="30px"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
