<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="620px"
        android:layout_height="340px"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!--标题-->
            <com.fotile.x1i.widget.StyleTextView
                android:id="@+id/tip_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="提示"
                android:textColor="#ffffff"
                android:textSize="36px"/>

            <com.fotile.x1i.widget.StyleTextView
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:textColor="#ffffff"
                android:textSize="30px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#C8AF70"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79px">

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_left"
                    android:layout_width="310px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@drawable/color_txt_select"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#C8AF70"/>

                <com.fotile.x1i.widget.StyleTextView
                    android:id="@+id/txt_right"
                    android:layout_width="309px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@drawable/color_txt_select"
                    android:textSize="30px"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
