<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9">

    <View
        android:id="@+id/view_line_up"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="230px"
        android:layout_marginTop="370px"
        android:layout_marginEnd="230px"
        android:background="@color/color_split_line" />

    <View
        android:id="@+id/view_line_down"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/view_line_up"
        android:layout_marginStart="230px"
        android:layout_marginTop="80px"
        android:layout_marginEnd="230px"
        android:background="@color/color_split_line" />

    <com.bigkoo.pickerview.lib.WheelView
        android:id="@+id/wheel_view"
        android:layout_width="match_parent"
        android:layout_marginStart="225px"
        android:layout_marginEnd="230px"
        android:layout_height="wrap_content"
        custom:dividerColor="@color/wheel_view_divider_color"
        custom:textColorCenter="@color/select_item"
        custom:textColorOut="@color/wheel_view_out_color"
        custom:textOutSize="36px"
        custom:textSize="48px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196px" />

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_line_down"
        android:layout_marginLeft="690px"
        android:layout_marginBottom="28dp"
        android:text="分钟"
        android:textColor="#E1C79B"
        android:textSize="@dimen/px30" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="640px"
        android:orientation="horizontal">

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_cancel"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="380px"
            android:paddingBottom="19px"
            android:paddingLeft="70px"
            android:paddingRight="70px"
            android:paddingTop="19px"
            android:textColor="@drawable/color_txt_select"
            android:textSize="30px"
            android:background="@drawable/grey_btn_background"
            android:text="@string/str_cancle"/>

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_confirm"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="120px"
            android:paddingBottom="19px"
            android:paddingLeft="70px"
            android:paddingRight="70px"
            android:paddingTop="19px"
            android:textColor="@drawable/color_txt_select"
            android:textSize="30px"
            android:background="@drawable/yellow_btn_background"
            android:text="@string/str_sure"/>
    </LinearLayout>

</RelativeLayout>