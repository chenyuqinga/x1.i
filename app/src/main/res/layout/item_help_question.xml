<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <!--用户协议-->
    <RelativeLayout
        android:id="@+id/layout_xieyi"
        android:layout_width="920px"
        android:layout_height="80px"
        android:background="@drawable/color_background_select">

        <com.fotile.x1i.widget.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户协议"
            android:textColor="#ffffff"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right_yellow"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="920px"
        android:layout_height="1px"
        android:background="#666666"/>

    <!--隐私政策-->
    <RelativeLayout
        android:id="@+id/layout_yinsi"
        android:layout_width="920px"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:background="@drawable/color_background_select">

        <com.fotile.x1i.widget.StyleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="隐私政策"
            android:textColor="#ffffff"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right_yellow"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="920px"
        android:layout_height="1px"
        android:background="#666666"/>

</LinearLayout>
