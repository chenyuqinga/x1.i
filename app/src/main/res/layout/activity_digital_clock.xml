<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout_digital_clock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/lLayout_time_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px">

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_digital_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="180px" />

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_digital_time_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_digital_time"
            android:layout_marginLeft="30px"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textSize="48px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lLayout_time_area"
        android:gravity="center"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_weather_icon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="centerCrop"
            android:layout_marginRight="56px"
            android:visibility="gone"/>

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/tv_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textSize="90px" />

    </LinearLayout>
</RelativeLayout>