<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px80"
            android:src="@mipmap/icon_fault_push"/>

        <TextView
            android:id="@+id/tv_tip_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:gravity="center"
            android:text="保养提示"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/px36"/>

        <TextView
            android:id="@+id/tv_tip_content"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginTop="@dimen/px30"
            android:gravity="center"
            android:textColor="@color/white_txt"
            android:textSize="@dimen/px30"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80px">

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/txt_later"
            android:layout_width="200px"
            android:layout_height="80px"
            android:background="@drawable/grey_btn_background"
            android:gravity="center"
            android:text="稍后提示"
            android:textColor="@drawable/color_txt_select"
            android:textSize="30px"/>

        <com.fotile.x1i.widget.StyleTextView
            android:id="@+id/txt_completed"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="100px"
            android:background="@drawable/yellow_btn_background"
            android:gravity="center"
            android:text="已完成保养"
            android:textColor="@drawable/color_txt_select"
            android:textSize="30px"/>
    </LinearLayout>

</RelativeLayout>
