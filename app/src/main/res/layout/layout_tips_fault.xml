<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px80"
        android:drawableTop="@mipmap/image_fault_tips"
        android:drawablePadding="@dimen/px30"
        android:gravity="center"
        android:text="故障提示"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/px36" />

    <com.fotile.x1i.widget.StyleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center"
        android:text="@string/str_fault_f1"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/px30" />

    <com.fotile.x1i.widget.StyleTextView
        android:id="@+id/tv_later"
        style="@style/BtnStyle"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px80"
        android:layout_marginTop="@dimen/px90"
        android:text="稍后提示" />


</LinearLayout>