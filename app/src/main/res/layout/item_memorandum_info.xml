<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="920px"
    android:layout_height="80px"
    android:layout_marginLeft="@dimen/px180">

    <com.fotile.x1i.widget.StyleTextView
        android:id="@+id/tv_time_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="@string/message_today"
        android:textColor="@color/white"
        android:textSize="26px"
        android:visibility="visible" />

    <com.fotile.x1i.widget.StyleTextView
        android:id="@+id/tv_time_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px80"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:textSize="26px" />

    <com.fotile.x1i.widget.StyleTextView
        android:id="@+id/tv_content_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px180"
        android:text="@string/message_remotecontrol"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="26px" />
    <ImageView
        android:id="@+id/img_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/img_item_delete"
        android:layout_centerVertical="true"/>
</RelativeLayout>
