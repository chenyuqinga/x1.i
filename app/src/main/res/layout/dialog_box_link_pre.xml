<?xml version="1.0" encoding="utf-8"?><!--盒子连接view-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="130px"
        android:layout_marginTop="179px"
        android:layout_marginEnd="130px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="248px"
            android:contentDescription="@null"
            android:src="@mipmap/img_box_position" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29px"
            android:gravity="center"
            android:text="@string/str_box_connect_note_line1"
            android:textColor="@color/white_txt"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_box_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26px" />

        <LinearLayout
            android:id="@+id/ll_box_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="32px"
                android:layout_height="32px"
                android:background="@drawable/checkbox_style"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="语音助手指示灯为橙色长亮"
                android:textColor="@color/white_txt"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="200px"
                android:layout_height="80px"
                android:layout_marginLeft="249px"
                android:background="@drawable/grey_btn_background"
                android:gravity="center"
                android:text="@string/str_exit"
                android:textColor="@drawable/color_txt_select"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="200px"
                android:layout_height="80px"
                android:layout_marginLeft="120px"
                android:background="@drawable/grey1_btn_background"
                android:gravity="center"
                android:text="下一步"
                android:textColor="#FF666666"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px100"
        android:text="语音助手设置"
        android:textColor="@color/white_txt"
        android:textSize="36px" />

</RelativeLayout>