<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_guide_title_exception"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginStart="@dimen/px40"
        android:layout_marginTop="@dimen/px100"
        android:layout_marginEnd="@dimen/px40"
        android:text="语音助手设置"
        android:textSize="36px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_link_exception_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260px"
        android:text="添加超时"
        android:textColor="@color/white"
        android:textSize="36px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_link_exception_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/px40"
        android:layout_marginTop="360px"
        android:layout_marginEnd="@dimen/px40"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_top_button"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="379px"
        android:layout_marginBottom="80px"
        android:gravity="center"
        android:background="@drawable/shape_button_normal"
        android:textColor="@drawable/color_txt_select"
        android:textSize="30px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_bottom_button"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120px"
        android:layout_marginBottom="80px"
        android:layout_toEndOf="@id/tv_top_button"
        android:gravity="center"
        android:background="@drawable/shape_button_select"
        android:textColor="@drawable/color_txt_select"
        android:textSize="30px"
        android:visibility="gone" />

</RelativeLayout>